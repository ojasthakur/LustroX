<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ojas.lustro.UpdateProfileActivity"
        android:id="@+id/imageView">


        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/imageButton5"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_alignRight="@+id/imageButton2"
            android:layout_alignEnd="@+id/imageButton2"
            android:onClick="onClickImageButton5"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_marginTop="17dp"
            android:id="@+id/imageButton3"
            android:layout_below="@+id/imageButton1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:onClick="onClickImageButton3"/>

        <ImageButton
            app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/imageButton1"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageButton3"
            android:layout_alignStart="@+id/imageButton3"
            android:layout_marginTop="12dp"
            android:onClick="onClickImageButton1"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <ImageButton
            app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/imageButton2"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
        android:onClick="onClickImageButton2"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSave"
            android:textSize="12sp"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/spinnerAge"
            android:onClick="onClickButtonSave"/>

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textViewName"
            android:layout_below="@+id/imageButton3"
            android:layout_alignLeft="@+id/imageButton3"
            android:layout_alignStart="@+id/imageButton3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:text="Sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:id="@+id/textViewSex"
            android:layout_below="@+id/buttonSave"
            android:layout_alignLeft="@+id/textViewUserAge"
            android:layout_alignStart="@+id/textViewUserAge" />

        <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUserAge"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/textViewName"
            android:layout_alignLeft="@+id/textViewName"
            android:layout_alignStart="@+id/textViewName" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/imageButton4"
            android:onClick="onClickImageButton4"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            android:textSize="14sp"
            android:layout_alignTop="@+id/textViewName"
            android:layout_toRightOf="@+id/textViewName"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignRight="@+id/imageButton5"
            android:layout_alignEnd="@+id/imageButton5" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerAge"
            android:layout_alignTop="@+id/textViewUserAge"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_alignStart="@+id/editTextName"
            android:layout_toStartOf="@+id/imageButton2"
            android:layout_alignRight="@+id/imageButton1"
            android:layout_alignEnd="@+id/imageButton1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerSex"
            android:layout_alignTop="@+id/textViewSex"
            android:layout_alignLeft="@+id/spinnerAge"
            android:layout_alignStart="@+id/spinnerAge"
            android:layout_alignRight="@+id/spinnerAge"
            android:layout_alignEnd="@+id/spinnerAge" />

    </RelativeLayout>

</ScrollView>