<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewMessage"
        android:textColor="@color/title"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewUserAge"
        android:layout_below="@id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/textViewUserSex"
        android:layout_below="@id/textViewUserAge"
        android:textColor="@color/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"

        android:layout_alignParentRight="true"

        android:id="@+id/imageViewCard"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textViewImageUri"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewUserSex"
        android:id="@+id/textViewImageUri" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@+id/imageViewCard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/textViewUserId" />

</RelativeLayout>