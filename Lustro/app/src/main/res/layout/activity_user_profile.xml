<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context=".FragmentPeople">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="320dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSex"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/textViewName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAge"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/recycler_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        android:textSize="20sp"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:fontFamily="serif"
        android:layout_below="@+id/textViewAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUserGps"
        android:layout_below="@+id/textViewMyGps"
        android:layout_alignLeft="@+id/textViewMyGps"
        android:layout_alignStart="@+id/textViewMyGps"
        android:textSize="10sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMyGps"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/recycler_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10sp" />

    <TextView
        android:text="Distance  ="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDistance"
        android:textSize="18sp"
        android:layout_above="@+id/buttonCalculateDistance"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Find Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCalculateDistance"
        android:onClick="onClickFindDistance"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>